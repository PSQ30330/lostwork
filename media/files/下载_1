 <script type="text/javascript">
     $(document).ready(function() {
        $('#example').DataTable({
            searching : false,
            destroy :true,
        "ajax":"/project//",
        "columns":[
                {"data":"pro_id"},
                {"data":"pro_title",},
                {"data":"pro_teacher"},
                {"data":"pro_content"},
                {"data": null}
            ],
        columnDefs: [{
                //   指定第最后一列

                targets: 4,
                render: function (data, type, row, meta) {

                    return '<a type="button" href="/project/xuanti?id='+row.pro_id+'">选题</a>';
                }
            }],

      "language": {
                    "processing": "正在获取数据，请稍后...",
                    "lengthMenu": "选择每页 _MENU_ 展示 ",
                    "zeroRecords": "未找到匹配结果--抱歉",
                    "info": "当前显示第 _PAGE_ 页结果，共 _PAGES_ 页, 共 _TOTAL_ 条记录",
                    "infoEmpty": "没有数据",
                    "infoFiltered": "(获取 _MAX_ 项结果)",
                    "sLoadingRecords": "载入中...",
                    "paginate": {
                        "first": "首页",
                        "previous": "上一页",
                        "next": "下一页",
                        "last": "末页"
                    }
                }
            } );

    $("#btn").click(function(row){



        var username = '201508030327';

        var pro_id = ;

        var content = $('#neirong').val();

        var csrf_token = $('[name="csrfmiddlewaretoken"]').val();

        var parentId = $(this).data('pro_id') || '';


        if(parentId){
            //因为在添加自评论时，会出现@xxx的东西所以我们按照索引把他去除
            content = content.slice(content.indexOf('\n')+1,);
        }

        $.ajaxSetup({
            data:{csrfmiddlewaretoken:'Ni1BAYFDq2s7Yxtm9MTD4XpL6UDEeu5xEns7Nu1oUGBhXML93i3i0SD0ywCNEvXH'}
        });



        $.ajax({
            url:'/comment/comment/',
            type:'post',
            data:{
                parent_id:parentId,
                username:username,
                pro_id:pro_id,
                content:content,

                csrfmiddlewaretoken:csrf_token,
            },

            success:function (res) {
                console.log(res);
                if(res.code===0){
                    var data = res.data;
                    //先计算原来.comment-list的后代有几个div，即有几个人评论，然后再加一
                    var num = $('.comment-list>div').length + 1;
                    //创建评论成功后，通过js在评论区列表在添加一条评论
                    var commenthtml = `
                    <div href="#" class="list-group-item">
                <h4 class="list-group-item-heading comment-header">
                    <span>#${ num }楼</span>
                    <span>${ data.create_time }</span>
                    <span>${ data.username }</span>
                     <span id="replay"><a href="">回复</a></span>

                </h4>
                    <p class="list-group-item-text">${ data.content }</p>
                </div>
                    `;
                    //在原来的评论列表后面添加一条
                    $('.comment-list').append(commenthtml);

                    $('#neirong').val('');
                    $("#btn").removeData("pid");
                }
                }

        })
    });

        $("#replay").click(function(){
        $('.comment-list').on('click','.replay',function () {
        var replayname = $(this).prev().text() ;//取到当前标签的前一个标签的文本
        $('#neirong').focus().val('@'+replayname+'\n');
        var pID = $(this).parent().parent().attr('my_id');
        $('#btn').data('pid',pID)
    })
        });





    } );

 </script>

